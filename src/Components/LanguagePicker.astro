<script>
  import { currentLang } from '../store/languageStore';

  const button = document.querySelector('#lang-button');
  button?.addEventListener('click', () => {
    const newLang = currentLang.get() === 'es' ? 'en' : 'es';
    currentLang.set(newLang);
  });
</script>